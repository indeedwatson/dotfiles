alias prec='twitch prec'
alias dist='twitch dist'
alias gdq='twitch gamesdonequick'
alias tcc='twitchnotifier -c tacticcarrotcake -n' # Check for online channels

# global aliases
alias l='exa -xa'
alias ..='cd ..'
alias ...='cd ../..'
alias ....='cd ../../..'
alias g='git'
alias svim='sudoedit'
alias pacget='pacaur -S'
alias pacu='pacaur -Syu'
alias py='python'
