[colors]
black = ${xrdb:color0}
grey = ${xrdb:color8}
white = ${xrdb:color15}
silver = ${xrdb:color7}
green = ${xrdb:color10}
blue = ${xrdb:color4}
red = ${xrdb:color1}
teal = ${xrdb:color6}
purple = ${xrdb:color5}
yellow = ${xrdb:color3}
orange = ${xrdb:color15}
light_grey = ${xrdb:color20}
dark_grey = ${xrdb:color19}
darkest_grey = ${xrdb:color19}

label_foreground = ${colors.light_grey}
label_background = ${colors.black}

[bar/left_screen]
monitor = ${env:MONITOR:HDMI-A-0}
monitor-fallback = ${env:MONITOR:VGA-1}
width = 100%
height = 15
offset-x = 0%
offset-y = 0%
radius = 0
fixed-center = true

background = ${colors.black}
foreground = ${colors.white}

line-size = 0
border-top-size = 0
border-bottom-size = 1
border-top-color = ${colors.darkest_grey}
border-bottom-color = ${colors.black}
line-color = ${colors.red}
border-color = ${colors.grey}
padding-left = 2
padding-right = 2
module-margin-left = 1
module-margin-right = 1

font-0 = "nerdypepper scientifica:pixelsize=8;0"
font-1 = unifont:fontformat=truetype:size=8:antialias=false;0
font-2 = "fontawesome:size=10;1"
font-3 = "WunconSiji:size=10;1"

modules-left = i3  
modules-center = music
modules-right = volume filesystem filesystem2 temperature time

[bar/right_screen]
inherit = bar/left_screen
monitor-strict = true
monitor = ${env:MONITOR:DVI-I-0}
monitor-fallback = ${env:MONITOR:DVI-0}

modules-left = i3
modules-center = twitch 
modules-right = redshift temperature time

[module/xwindow]
type = internal/xwindow
format = <label>
label = %title:0:50:...%
label-font = 0
label-foreground = ${colors.silver}
label-background = ${colors.black}
label-padding = 0

[module/filesystem]
type = internal/fs
interval = 25

mount-0 = /
format-mounted-prefix = 
#format-mounted-prefix-background = ${colors.teal}
format-mounted-prefix-foreground = ${colors.teal}
format-mounted-prefix-padding = 1
label-mounted =  %free%
label-mounted-foreground = ${colors.label_foreground}
label-mounted-background = ${colors.label_background}
label-mounted-padding = 0

format-unmounted-prefix-background = ${colors.black}
format-unmounted-prefix-foreground = #000000
format-unmounted-prefix-padding = 1
label-unmounted = %mountpoint% not mounted
label-unmounted-foreground = ${colors.blue}

[module/filesystem2]
inherit = module/filesystem
mount-0 = /home
format-mounted-prefix =
format-mounted-prefix-foreground = ${colors.blue}
#format-mounted-prefix-background = ${colors.blue}

[module/bspwm]
type = internal/bspwm

label-focused = %index%
label-focused-background = ${colors.grey}
label-focused-underline= ${colors.green}
label-focused-padding = 1

label-occupied = %index%
label-occupied-padding = 1

label-urgent = %index%!
label-urgent-background = ${colors.red}
label-urgent-padding = 1

label-empty = %index%
label-empty-foreground = ${colors.silver}
label-empty-padding = 1

[module/i3]
type = internal/i3
format = <label-state> <label-mode>
index-sort = true
wrapping-scroll = true

label-mode = " %mode% "
label-mode-padding = 1
label-mode-foreground = ${colors.black}
label-mode-background = ${colors.orange}
format-mode-prefix = ""

; focused = Active workspace on focused monitor
label-focused = %icon% 
label-focused-foreground = ${colors.white}
label-focused-background = ${colors.black}
label-focused-underline = ${colors.purple}
label-focused-padding = ${module/bspwm.label-focused-padding}

; unfocused = Inactive workspace on any monitor
label-unfocused = %icon%
label-unfocused-padding = ${module/bspwm.label-occupied-padding}
label-unfocused-foreground = ${colors.grey}

; visible = Active workspace on unfocused monitor
label-visible = %icon%
label-visible-background = ${self.label-focused-background}
label-visible-underline = ${self.label-focused-underline}
label-visible-padding = ${self.label-focused-padding}

; urgent = Workspace with urgency hint set
label-urgent = %icon%
label-urgent-background = ${colors.red}
label-urgent-underline = ${colors.red}
label-urgent-padding = ${module/bspwm.label-urgent-padding}

strip-wsnumbers = true

ws-icon-0 = 1;
ws-icon-1 = 2;
ws-icon-2 = 4;
ws-icon-3 = 7;
ws-icon-4 = 8;
ws-icon-5 = 9;
ws-icon-default = 
pin-workspaces = true


[module/mpd]
