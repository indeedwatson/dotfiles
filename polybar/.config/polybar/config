format-prefix-foreground = ${colors.purple}
#format-prefix-background = ${colors.purple}
format-prefix-padding = 1

format-foreground = ${colors.label_foreground}
format-background = ${colors.label_background}
label-padding = 0
tail = true


[module/taskwarrior]
