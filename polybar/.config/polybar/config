[colors]
black = ${xrdb:color0}
grey = ${xrdb:color8}
white = ${xrdb:color15}
silver = ${xrdb:color7}
green = ${xrdb:color10}
blue = ${xrdb:color4}
red = ${xrdb:color1}
teal = ${xrdb:color6}
purple = ${xrdb:color5}
yellow = ${xrdb:color3}
orange = ${xrdb:color16}
light_grey = ${xrdb:color20}
dark_grey = ${xrdb:color19}
darkest_grey = ${xrdb:color18}

label_foreground = ${colors.light_grey}
label_background = ${colors.darkest_grey}

[bar/example]
;monitor = ${env:MONITOR:VGA1}
width = 100%
height = 20
offset-x = 0%
offset-y = 0%
radius = 0
fixed-center = true

background = ${colors.black}
foreground = ${colors.white}

line-size = 0
border-top-size = 3
border-bottom-size = 3
border-top-color = ${colors.black}
border-bottom-color = ${colors.black}
line-color = ${colors.red}
border-color = ${colors.grey}
padding-left = 2
padding-right = 2
module-margin-left = 2
module-margin-right = 2

font-0 = "lucy tewii:pixelsize=8;0"
font-1 = unifont:fontformat=truetype:size=8:antialias=false;0
font-2 = siji:pixelsize=10;1
font-3 = "fontawesome:size=10;1"

modules-left = i3 music
modules-center = taskwarrior  
modules-right = twitch filesystem filesystem2 temperature time

[module/xwindow]
type = internal/xwindow
format = <label>
label = %title:0:50:...%
label-font = 0
label-foreground = ${colors.silver}
label-background = ${colors.black}
label-padding = 0


[module/filesystem]
type = internal/fs
interval = 25

mount-0 = /
format-mounted-prefix = /
format-mounted-prefix-background = ${colors.teal}
format-mounted-prefix-foreground = ${colors.black}
format-mounted-prefix-padding = 1
label-mounted =  %free%
label-mounted-foreground = ${colors.label_foreground}
label-mounted-background = ${colors.label_background}
label-mounted-padding = 1

format-unmounted-prefix-background = ${colors.black}
format-unmounted-prefix-foreground = #000000
format-unmounted-prefix-padding = 1
label-unmounted = %mountpoint% not mounted
label-unmounted-foreground = ${colors.blue}

[module/filesystem2]
inherit = module/filesystem
mount-0 = /home
format-mounted-prefix = 
format-mounted-prefix-background = ${colors.blue}

[module/bspwm]
type = internal/bspwm

label-focused = %index%
label-focused-background = ${colors.grey}
label-focused-underline= ${colors.green}
label-focused-padding = 1

label-occupied = %index%
label-occupied-padding = 1

label-urgent = %index%!
label-urgent-background = ${colors.red}
label-urgent-padding = 1

label-empty = %index%
label-empty-foreground = ${colors.silver}
label-empty-padding = 1

[module/i3]
type = internal/i3
format = <label-state> <label-mode>
index-sort = true
wrapping-scroll = true

label-mode = " %mode% "
label-mode-padding = 1
label-mode-foreground = ${colors.black}
label-mode-background = ${colors.orange}
format-mode-prefix = ""

; focused = Active workspace on focused monitor
label-focused = %icon%
label-focused-foreground = ${colors.white}
label-focused-background = ${colors.black}
label-focused-underline = ${colors.purple}
label-focused-padding = ${module/bspwm.label-focused-padding}

; unfocused = Inactive workspace on any monitor
label-unfocused = %icon%
label-unfocused-padding = ${module/bspwm.label-occupied-padding}
label-unfocused-foreground = ${colors.grey}

; visible = Active workspace on unfocused monitor
label-visible = %icon%
label-visible-background = ${self.label-focused-background}
label-visible-underline = ${self.label-focused-underline}
label-visible-padding = ${self.label-focused-padding}

; urgent = Workspace with urgency hint set
label-urgent = %icon%
label-urgent-background = ${colors.black}
label-urgent-underline = ${colors.red}
label-urgent-padding = ${module/bspwm.label-urgent-padding}

strip-wsnumbers = true

ws-icon-0 = 1;
ws-icon-1 = 7;
ws-icon-default = 


[module/mpd]
type = internal/mpd
format-online = <label-song>  <icon-prev> <icon-stop> <toggle> <icon-next>

icon-prev = 
icon-stop = 
icon-play = 
icon-pause = 
icon-next = 

label-song-maxlen = 25
label-song-ellipsis = true

[module/xbacklight]
type = internal/xbacklight

format = <label> <bar>
label = BL

bar-width = 10
bar-indicator = |
bar-indicator-foreground = #ff
bar-indicator-font = 2
bar-fill = ─
bar-fill-font = 2
bar-fill-foreground = #9f78e1
bar-empty = ─
bar-empty-font = 2
bar-empty-foreground = ${colors.silver}

[module/backlight-acpi]
inherit = module/xbacklight
type = internal/backlight
card = intel_backlight

[module/cpu]
type = internal/cpu
interval = 2
format-prefix = " "
format-prefix-foreground = ${colors.silver}
; format-underline = #f90000
label = %percentage%%

[module/memory]
type = internal/memory
interval = 2
format-prefix = " "
format-prefix-foreground = ${colors.silver}
; format-underline = #4bffdc
label = %percentage_used%%

[module/wlan]
type = internal/network
interface = net1
interval = 3.0

format-connected = <ramp-signal> <label-connected>
; format-connected-underline = #9f78e1
label-connected = %essid%

format-disconnected =
;format-disconnected = <label-disconnected>
;format-disconnected-underline = ${self.format-connected-underline}
;label-disconnected = %ifname% disconnected
;label-disconnected-foreground = ${colors.silver}

ramp-signal-0 = 
ramp-signal-1 = 
ramp-signal-2 = 
ramp-signal-3 = 
ramp-signal-4 = 
ramp-signal-foreground = ${colors.silver}

[module/eth]
type = internal/network
interface = enp3s0
interval = 3.0

; format-connected-underline = #55aa55
format-connected-prefix = " "
format-connected-prefix-foreground = ${colors.silver}
label-connected =  %downspeed% | %upspeed%

format-disconnected =
;format-disconnected = <label-disconnected>
;format-disconnected-underline = ${self.format-connected-underline}
;label-disconnected = %ifname% disconnected
;label-disconnected-foreground = ${colors.silver}

[module/date]
type = internal/date
interval = 5
date = "%d/%m"

format-prefix = 
format-prefix-foreground = ${colors.black}
format-prefix-background = ${colors.yellow}
format-prefix-padding = 1

label =%date% 
label-foreground = ${colors.light_grey}
label-background = ${colors.dark_grey}
label-padding = 1

[module/time]
type = internal/date
interval = 5
time = "%d/%m %H:%M"
format-prefix = 
format-prefix-foreground = ${colors.black}
format-prefix-background = ${colors.orange}
format-prefix-padding = 1

label = %time%
label-foreground = ${colors.label_foreground}
label-background = ${colors.label_background}
label-padding = 1

format-suffix = 
format-suffix-foreground = ${colors.black}
format-suffix-background = ${colors.green}
format-suffix-padding = 1
[module/volume]
type = internal/volume

format-volume = <label-volume> <bar-volume>
label-volume =
label-volume-foreground = ${root.foreground}

format-muted-prefix =   
format-muted-foreground = ${colors.silver}
label-muted =  muted 

bar-volume-width = 10
bar-volume-foreground-0 = #55aa55
bar-volume-foreground-1 = #55aa55
bar-volume-foreground-2 = #55aa55
bar-volume-foreground-3 = #55aa55
bar-volume-foreground-4 = #55aa55
bar-volume-foreground-5 = #f5a70a
bar-volume-foreground-6 = #ff5555
bar-volume-gradient = false
bar-volume-indicator = ■
bar-volume-indicator-font = 2
bar-volume-fill = ─
bar-volume-fill-font = 2
bar-volume-empty = ─
bar-volume-empty-font = 3
bar-volume-empty-foreground = ${colors.silver}

[module/pavolume]
type = custom/script
interval = 2
label = %output%
label-foreground = ${colors.light_grey}
exec = ~/.config/polybar/pavolume.sh
exec-if = pacmd list-sinks | grep -q available
click-right = exec pavucontrol
click-left = ~/.config/polybar/pavolume.sh --togmute
scroll-up = ~/.config/polybar/pavolume.sh --up
scroll-down = ~/.config/polybar/pavolume.sh --down

[module/weather]
type = custom/script
interval = 10
format = <label>
format-prefix = " "
format-prefix-font = 3
format-prefix-foreground = ${colors.silver}
exec = ~/.config/polybar/weather

[module/weathericons]
type = custom/script
interval = 10
format = <label>
format-ICON-foreground = ${colors.silver}
exec = ~/.config/polybar/weathericons

[module/twitch]
interval = 30
format = "  <label>  "
type = custom/script
exec = ~/.config/polybar/twitch_polybar.sh
format-prefix = ""
format-prefix-foreground = ${colors.black}
format-prefix-background = ${colors.purple}
format-prefix-padding = 1

format-foreground = ${colors.label_foreground}
format-background = ${colors.label_background}
format-padding = 0


[module/taskwarrior]
interval = 30
type = custom/script
exec = ~/.config/polybar/task_polybar.sh
format = <label>
format-foreground = ${colors.light_grey}
format-prefix = " "

[module/temperature]
type = internal/temperature
thermal-zone = 0
warn-temperature = 60

format = <ramp><label>
format-warn = <ramp> <label-warn>
label = %temperature%
label-warn = %temperature%
label-warn-foreground = ${colors.red}
label-foreground = ${colors.label_foreground}
label-background = ${colors.label_background}
label-padding = 1

ramp-0 = 
ramp-1 = 
ramp-2 = 
ramp-foreground = ${colors.black}
ramp-background = ${colors.purple}
ramp-padding = 1

[module/redshift]
type = custom/script
interval = 5
exec = ~/.config/polybar/redshift.sh

[module/music]
type = custom/script
label = %output:0:50%
exec = ~/.config/polybar/player-mpris-simple.sh
label-foreground = ${colors.label_foreground}
label-background = ${colors.label_background}
label-padding = 1

format-prefix = ""
format-prefix-foreground = ${colors.black}
format-prefix-background = ${colors.red}
format-prefix-padding = 1

[settings]
screenchange-reload = true

[global/wm]
margin-top = 5
margin-bottom = 5


