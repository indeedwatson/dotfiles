label-background = ${colors.label_background}
label-padding = 0

format-suffix =
format-suffix-foreground = ${colors.green}
#format-suffix-background = ${colors.green}
format-suffix-padding = 0

[module/pulseaudio-tail]
type = custom/script
exec = ~/.config/polybar/pulseaudio-tail.sh
tail = true
sink = default


[module/volume]
type = internal/pulseaudio

; speaker-soundcard = hw:1
; headphone-soundcard = hw:0
; headphone-id = 0
; mapped = true
; 
; speaker-mixer = Master
; headphone-mixer = Headphon

sink = default
format-volume = <ramp-volume> <bar-volume>
label-volume =
label-volume-foreground = ${root.foreground}
label-volume-background = ${colors.green}
format-volume-padding = 0

format-muted-foreground = ${colors.silver}
label-muted = 
format-muted-padding = 15

bar-volume-width = 5
ramp-volume-0 =
ramp-volume-1 =

bar-volume-foreground-0 = ${colors.green}
bar-volume-gradient = false
bar-volume-indicator =
bar-volume-fill =
bar-volume-empty =
bar-volume-empty-foreground = ${colors.blue}


[module/weather]
type = custom/script
