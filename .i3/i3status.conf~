general {
	output_format = "none"
    colors = true
    interval = 5
	color_good = "#B5BD68"
	color_bad = "#CC6666"
	color_degraded = "#00FF00"
}


order += "disk /"
order += "disk /home"
order += "volume master"
order += "time"


time {
        format = " %d-%m  %H:%M"
}


disk "/" {
        format = " %free"
}


volume master {
	format = " %volume"
        device = "default"
        mixer = "Master"
        mixer_idx = 0
}


disk "/home" {
        format = " %free "
}
