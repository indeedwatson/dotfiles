# Aliases for .bashrc
# twitch channels
alias santzo='twitch santzo'
alias tftv='twitch tftv'
alias ohn='twitch ohn'
alias prec='twitch prec'
alias dist='twitch dist'

# global aliases
alias l='ls -a'
alias ..='cd ..'
alias ...='cd ../..'
alias ....='cd ../../..'
alias pip3='sudo python3 -m pip'
alias g='git'
alias gitc='git clone'
alias v=vim
alias suvim='sudo vim'
alias rr='rm -rf'
alias rbash='xrdb ~/.Xresources'
alias pacget='sudo pacman -S'
alias pacu='sudo pacman -Syu'
alias p='python'
alias zzz='systemctl suspend'
alias off='systemctl poweroff'
alias stm='DRI_PRIME=1 steam-native &'

# List aliases
alias lsalias="alias | sed 's/=.*//'"
