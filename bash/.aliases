# Aliases for .bashrc
# twitch channels
alias santzo='twitch santzo'
alias tftv='twitch tftv'
alias ohn='twitch ohn'
alias prec='twitch prec'
alias dist='twitch dist'
alias gdq='twitch gamesdonequick'
# Check for online channels
alias tcc='twitchnotifier -c tacticcarrotcake -n'

# global aliases
alias l='ls -a'
alias ..='cd ..'
alias ...='cd ../..'
alias ....='cd ../../..'
alias g='git'
alias suvim='sudo vim'
alias rr='rm -rf'
alias pacget='pacaur -S'
alias pacu='pacaur -Syu'
alias py='python'
alias zzz='systemctl suspend'
alias off='systemctl poweroff'
alias steam-wine='DRI_PRIME=1 WINEDEBUG=-all wine ~/.wine/drive_c/Program\ Files\ \(x86\)/Steam/Steam.exe >/dev/null 2>&1 -no-cef-sandbox &'
alias mkdir='mkdir -p'
alias pstbn='xclip -o | pbpst -S'
alias radeon='DRI_PRIME=1 VDPAU_DRIVER=radeonsi'
alias bc='bc -q'
# List aliases
alias lsalias="alias | sed 's/=.*//'"

alias v='f -e vim '
alias m='f -e DRI_PRIME=1 VDPAU_DRIVER=radeonsi mpv'
alias o='a -e xdg-open'
